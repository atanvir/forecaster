<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blurgrey2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/pop_round_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/create_passcode_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAllCaps="true"
            android:text="@string/create_your_passcode"
            android:textColor="@color/green"
            android:textSize="@dimen/dp_18"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/app_icon"
            app:layout_constraintBottom_toTopOf="@+id/secound_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_passcode_txt" />


        <ImageView
            android:id="@+id/first_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/pin_circle_background"
            app:layout_constraintEnd_toStartOf="@+id/secound_iv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/secound_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pin_circle_background"
            app:layout_constraintBottom_toBottomOf="@+id/first_iv"
            app:layout_constraintEnd_toStartOf="@+id/third_iv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/first_iv"
            app:layout_constraintTop_toTopOf="@+id/first_iv" />

        <ImageView
            android:id="@+id/third_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pin_circle_background"
            app:layout_constraintBottom_toBottomOf="@+id/secound_iv"
            app:layout_constraintEnd_toStartOf="@+id/fourth_iv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/secound_iv"
            app:layout_constraintTop_toTopOf="@+id/secound_iv" />


        <ImageView
            android:id="@+id/fourth_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:background="@drawable/pin_circle_background"
            app:layout_constraintBottom_toBottomOf="@+id/third_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/third_iv"
            app:layout_constraintTop_toTopOf="@+id/third_iv" />

        <com.forecaster.View.AvenirDemiTextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/back"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/one_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toBottomOf="@+id/two_txt"
            app:layout_constraintEnd_toStartOf="@+id/two_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/two_txt" />

        <TextView
            android:id="@+id/two_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toTopOf="@+id/fifth_txt"
            app:layout_constraintEnd_toStartOf="@+id/three_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/one_txt"
            app:layout_constraintTop_toBottomOf="@+id/third_iv" />

        <TextView
            android:id="@+id/three_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toBottomOf="@+id/two_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/two_txt"
            app:layout_constraintTop_toTopOf="@+id/two_txt" />


        <TextView
            android:id="@+id/four_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toBottomOf="@+id/fifth_txt"
            app:layout_constraintEnd_toStartOf="@+id/fifth_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fifth_txt" />


        <TextView
            android:id="@+id/fifth_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toTopOf="@+id/eight_txt"
            app:layout_constraintEnd_toStartOf="@+id/six_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/four_txt"
            app:layout_constraintTop_toBottomOf="@+id/two_txt" />

        <TextView
            android:id="@+id/six_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toBottomOf="@+id/fifth_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fifth_txt"
            app:layout_constraintTop_toTopOf="@+id/fifth_txt" />


        <TextView
            android:id="@+id/seven_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toBottomOf="@+id/eight_txt"
            app:layout_constraintEnd_toStartOf="@+id/eight_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/eight_txt" />

        <TextView
            android:id="@+id/eight_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toTopOf="@+id/zero_txt"
            app:layout_constraintEnd_toStartOf="@+id/nine_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/seven_txt"
            app:layout_constraintTop_toBottomOf="@+id/fifth_txt" />

        <TextView
            android:id="@+id/nine_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toBottomOf="@+id/eight_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/eight_txt"
            app:layout_constraintTop_toTopOf="@+id/eight_txt" />


        <TextView
            android:id="@+id/zero_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/green_circle_shape3"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_22"
            app:layout_constraintBottom_toTopOf="@+id/back_txt"
            app:layout_constraintEnd_toStartOf="@+id/nine_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/seven_txt"
            app:layout_constraintTop_toBottomOf="@+id/eight_txt" />


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>