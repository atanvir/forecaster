<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main2"
    tools:context=".Activity.CategorySelectionActivity"
    android:background="#FBFBFB">


    <ImageView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/home_screen_logo"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/app_theme"
        android:textSize="@dimen/dp_30"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/self_development_cv"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_4"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/requestmtLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_60"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_50"
                            android:src="@drawable/manager" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20">

                            <com.Bforecaster.View.AvenirDemiTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginVertical="@dimen/dp_5"
                                android:background="@drawable/green_btn_background"
                                android:gravity="center"
                                android:text="@string/request_management"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium"

                                />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/family_cv"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_4"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/paymentmtLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_60"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_50"
                            android:src="@drawable/payment_method__1_" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20">

                            <com.Bforecaster.View.AvenirDemiTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginVertical="@dimen/dp_5"
                                android:background="@drawable/green_btn_background"
                                android:gravity="center"
                                android:text="@string/payment_method"

                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium"

                                />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/psychological_cv"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_4"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/profilemtLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_60"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_50"
                            android:src="@drawable/settings" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20">

                            <com.Bforecaster.View.AvenirDemiTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginVertical="@dimen/dp_5"
                                android:background="@drawable/green_btn_background"
                                android:gravity="center"
                                android:text="@string/profile_managements"
                                android:textColor="@color/white"

                                android:textSize="@dimen/text_size_medium_large" />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/parenting_cv"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_4"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/notificationLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_60"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_50"
                            android:src="@drawable/turn_notifications_on_button" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20">

                            <com.Bforecaster.View.AvenirDemiTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginVertical="@dimen/dp_5"
                                android:background="@drawable/green_btn_background"

                                android:gravity="center"
                                android:text="@string/notification"
                                android:textColor="@color/white"

                                android:textSize="@dimen/text_size_medium_large" />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>